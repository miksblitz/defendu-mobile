{
  "expo": {
    "name": "defendu-mobile",
    "slug": "defendu-mobile",
    "scheme": "defenduapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "updates": { "enabled": false },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": { "NSAllowsArbitraryLoads": true },
        "NSCameraUsageDescription": "This app uses the camera for pose-based technique feedback during exercises."
      }
    },
    "android": {
      "package": "com.defendu.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      ["expo-build-properties", { "android": { "usesCleartextTraffic": true } }],
      "expo-camera",
      [
        "expo-image-picker",
        {
          "colors": {
            "cropToolbarColor": "#f0f4f8",
            "cropToolbarIconColor": "#041527",
            "cropToolbarActionTextColor": "#041527",
            "cropBackButtonIconColor": "#041527",
            "cropBackgroundColor": "#ffffff"
          }
        }
      ]
    ],
    "web": { "favicon": "./assets/favicon.png" }
  }
}
